<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/characterListFragment">
    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.example.rickandmortyapi.fragments.ListFragment"
        android:label="CharacterListFragment"
        tools:layout="@layout/character_list"
        >
        <action
            android:id="@+id/action_characterListFragment_to_characterFragment"
            app:destination="@id/characterFragment" />
        <argument
            android:name="character"
            app:argType="com.example.rickandmortyapi.model.Character"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        tools:layout="@layout/details"
        android:id="@+id/characterFragment"
        android:name="com.example.rickandmortyapi.fragments.CharacterFragment"
        android:label="CharacterFragment" />
</navigation>